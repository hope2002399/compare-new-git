<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
	default-lazy-init="false">
	
	<!-- 启动注册 -->
	<bean id="registerOnStartUpManager" class="com.test.example.schedule.lifecycle.manager.RegisterOnStartUpManager" scope="singleton" />
	<!-- 心跳 -->
	<bean id="heartBeatManager" class="com.test.example.schedule.lifecycle.manager.HeartBeatManager" scope="singleton" />
	<!-- 节点信息管理 -->
	<bean id="lifecycleManager" class="com.test.example.schedule.lifecycle.manager.LifecycleManager" scope="singleton" />
	
	<!-- hb -->
	<bean name="hbScheduler"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="applicationContextSchedulerContextKey" value="applicationContextKey" />
		<property name="triggers">
			<list>
				<ref bean="hbCronTrigger" />
			</list>
		</property>
		<property name="quartzProperties">
			<props>
				<prop key="org.quartz.threadPool.class">org.quartz.simpl.SimpleThreadPool</prop>
				<prop key="org.quartz.threadPool.threadCount">1</prop>
			</props>
		</property>
	</bean>

	<bean id="hbJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="heartBeatManager" />
		<property name="targetMethod" value="heartBeat" />
		<property name="concurrent" value="false" />
	</bean>

	<bean id="hbCronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="hbJobDetail" />
		<property name="cronExpression" value="0/3 * * * * ?" />
	</bean>
	
</beans>